          },
          "versionnumber": [
            "0.93 未満"
          ]
        },
        {
          "name": "アップル",
          "productname": "Apple Mac OS X Server",
          "cpe": {
            "text": "cpe:/o:apple:mac_os_x_server",
            "version": "2.2"
          },
          "versionnumber": [
            "v10.4.11",
            "v10.5 から v10.5.4"
          ]
        }
      ]
    },
    "impact": {
      "cvss": [
        {
          "version": "2.0",
          "severity": {
            "text": "Medium",
            "type": "Base"
          },
          "base": "4.3",
          "vector": "AV:N/AC:M/Au:N/C:N/I:N/A:P"
        }
      ],
      "impactitem": {
        "description": "第三者による null で終了しない文字列を生成するメッセージにより、サービス運用妨害状態 (DoS) にされる可能性があります。"
      }
    },
    "solution": {
      "solutionitem": {
