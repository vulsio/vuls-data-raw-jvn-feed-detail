    "impact": {
      "cvss": [
        {
          "version": "2.0",
          "severity": {
            "text": "Medium",
            "type": "Base"
          },
          "base": "5.4",
          "vector": "AV:N/AC:H/Au:N/C:N/I:N/A:C"
        }
      ],
      "impactitem": {
        "description": "第三者により、過度に長い hci 名を伴う Bluetooth のデバイスを設定され、(1) Windows Mobile システムへ直接接続される、または (2) Windows Mobile システムが周辺のデバイスをスキャンするために待機させることで、サービス運用妨害 (デバイスのリブート) 状態にされる可能性があります。"
      }
    },
